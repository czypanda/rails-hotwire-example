<turbo-frame id="flash">
  <% if flash[:notice] %>
    <div id="toast" class="fixed bottom-4 right-4 bg-green-600 text-white px-8 py-4 rounded shadow-lg z-50" data-controller="ui--toast">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div id="toast" class="fixed bottom-4 right-4 bg-red-600 text-white px-4 py-2 rounded shadow-lg z-50" data-controller="ui--toast">
      <%= flash[:alert] %>
    </div>
  <% end %>
</turbo-frame>