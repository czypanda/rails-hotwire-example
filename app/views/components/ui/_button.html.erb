<% case as %>
<% when :link %>
 <%= link_to href, class: button_classes, data: data do %>
    <%= text %>
  <% end %>
<% when :button %>
  <% if href.present? && method.present? %>
    <%= button_to href, class: button_classes, data: data, method: method do %>
      <%= text %>
    <% end %>
  <% else %>
    <%= button_tag class: button_classes, data: data do %>
      <%= text %>
    <% end %>
  <% end %>
<% end %>
